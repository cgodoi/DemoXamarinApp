<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="demoCgodoi.Views.ItemDetailPage"
             Title="{Binding Title}">
	<StackLayout Spacing="20" Padding="15">
		<Label Text="{Binding Dispositivo.Nombre}" FontSize="Medium"/>
        <Label Text="{Binding Dispositivo.Descripcion}" FontSize="Small"/>
        <Button Text="ON/OFF" FontSize="Medium" ></Button>
        <Label  x:Name="messageLabelItem" />
        <Button Text="Eliminar Dispositivo" Clicked="Button_Clicked" />
    </StackLayout>
</ContentPage>