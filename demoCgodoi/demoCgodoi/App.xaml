<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="demoCgodoi.App">
  <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#2B2D42</Color>
            <Color x:Key="PrimaryDark">#8D99AE</Color>
            <Color x:Key="Accent">#FE4A49</Color>
            <Color x:Key="LightBackgroundColor">#FED766</Color>
            <Color x:Key="DarkBackgroundColor">#2B2D42</Color>
            <Color x:Key="MediumGrayTextColor">#4d4d4d</Color>
            <Color x:Key="LightTextColor">#999999</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
